#!/bin/bash

echo 'mkdir -p app/cache/ app/logs/'
sudo mkdir -p app/cache/ app/logs/

echo 'sudo setfacl -R -m u:www-data:rwX -m u:`whoami`:rwX app/cache app/logs'
sudo setfacl -R -m u:www-data:rwX -m u:`whoami`:rwX app/cache app/logs

echo 'sudo setfacl -dR -m u:www-data:rwx -m u:`whoami`:rwx app/cache app/logs'
sudo setfacl -dR -m u:www-data:rwx -m u:`whoami`:rwx app/cache app/logs


echo "sudo chmod -R 777 /tmp/ladybug_cache"
sudo chmod -R 777 /tmp/ladybug_cache
